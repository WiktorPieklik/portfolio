<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/welcome_screen"
        android:scaleType="centerCrop"
        android:alpha="0.85"/>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.OfferDetailsActivity"
    android:orientation="vertical"
    android:rowCount="3">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/offerDetailName"
        android:text="Loooooooool"
        android:textSize="25sp"
        android:textStyle="italic|bold"
        android:fontFamily="@font/capriola"
        android:textColor="#ffffff"
        android:layout_gravity="center"
        android:layout_marginTop="150dp"/>

    <EditText
        android:id="@+id/offerDetailsPriceET"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:enabled="false"
        android:fontFamily="@font/capriola"
        android:inputType="number|text"
        android:text="1500"
        android:textColor="#ffffff"
        android:textSize="25sp" />
    <Button
        android:id="@+id/editOfferButton"
        android:layout_width="352dp"
        android:layout_height="40dp"
        android:layout_marginBottom="16dp"
        android:background="#C0020000"
        android:fontFamily="@font/capriola"
        android:text="@string/editButton"
        android:textStyle="bold"
        android:onClick="editOfferClick"
        android:textColor="#ffffff"
        android:layout_gravity="center"
        android:layout_row="2"/>
    <Button
        android:id="@+id/saveOfferButton"
        android:layout_width="352dp"
        android:layout_height="40dp"
        android:layout_marginBottom="16dp"
        android:background="@color/red"
        android:fontFamily="@font/capriola"
        android:text="@string/saveButton"
        android:visibility="gone"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_row="2"
        android:layout_column="0"
        android:onClick="saveOfferClick"/>

</GridLayout>
</FrameLayout>