<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.wiktorpieklik.car_rental">

    <application
        android:allowBackup="true"
        android:icon="@drawable/rent_a_car"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".Activities.LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity android:name=".Activities.RegisterActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Activities.OwnerActivity"
            android:screenOrientation="portrait"
            android:label="@string/ownerActivity" />
        <activity
            android:name=".Activities.CarDetailsActivity"
            android:screenOrientation="portrait"
            android:label="@string/carDetailsActivity" />
        <activity
            android:name=".Activities.OfferDetailsActivity"
            android:screenOrientation="portrait"
            android:label="@string/offerDetailsActivity" />
        <activity
            android:name=".Activities.AddOfferActivity"
            android:screenOrientation="portrait"
            android:label="@string/addOffer" />
        <activity
            android:name=".Activities.AddCarActivity"
            android:screenOrientation="portrait"
            android:label="@string/addCar" />
        <activity android:name=".Activities.OrderDetailsActivity" />
        <activity android:name=".Activities.ClientActivity" />
        <activity android:name=".Activities.ClientOfferDetailActivity" />
        <activity android:name=".Activities.ClientOrderDetailActivity"></activity>
    </application>

</manifest>